<p id="notice"><%= notice %></p>

<div class="row">
  <div class="medium-8 columns">
    <h1>Listing Submissions</h1>
  </div>
  <div class="medium-4 columns medium-text-right">
    <%= link_to 'Download CSV', submissions_path(format: [:csv]), class: 'button ' %>
  </div>
</div>


<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submissions.each do |submission| %>
      <tr>
        <td><%= submission.student %></td>
        <td><%= submission.data %></td>
        <td><%= link_to 'Show', submission %></td>
        <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
        <td><%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Submission', new_submission_path %>
