<section class="row">
  <div class="medium-8 columns">
    <h1>Courses</h1>
  </div>
  <div class="medium-4 columns">
    <%= button_link_to 'New', new_course_path %>
  </div>

  <div class="small-12 columns">
    <table class="responsive">
      <thead>
        <tr>
          <th>Name</th>
          <th>Level</th>
          <th>Number</th>
          <th>Credits</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.level %></td>
            <td><%= course.number %></td>
            <td><%= course.credit_hours %></td>
            <td class="actions"><%= link_to 'View', course %></td>
            <td class="actions"><%= link_to 'Edit', edit_course_path(course) %></td>
            <td class="actions"><%#= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="small-6 columns end">
    <%= button_link_to 'New Course', new_course_path %>
  </div>
</section>
